-- Load Rayfield UI Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- settings
local settings = {
    defaultcolor = Color3.fromRGB(255,0,0),
    teamcheck = false,
    teamcolor = true
};

-- services
local runService = game:GetService("RunService");
local players = game:GetService("Players");

-- variables
local localPlayer = players.LocalPlayer;
local camera = workspace.CurrentCamera;

-- functions
local newVector2, newColor3, newDrawing = Vector2.new, Color3.new, Drawing.new;
local tan, rad = math.tan, math.rad;
local wtvp = function(position) local screenPos, visible = camera:WorldToViewportPoint(position) return newVector2(screenPos.X, screenPos.Y), visible, screenPos.Z end;

local espEnabled = false
local espCache = {};

local function createEsp(player)
    local drawings = {};
    
    drawings.name = newDrawing("Text");
    drawings.name.Size = 18;
    drawings.name.Center = true;
    drawings.name.Outline = true;
    drawings.name.Color = settings.defaultcolor;
    drawings.name.Visible = false;

    espCache[player] = drawings;
end

local function removeEsp(player)
    if rawget(espCache, player) then
        for _, drawing in next, espCache[player] do
            drawing:Remove();
        end
        espCache[player] = nil;
    end
end

local function updateEsp(player, esp)
    local character = player.Character;
    local head = character and character:FindFirstChild("Head");
    if head then
        local position, visible, depth = wtvp(head.Position + Vector3.new(0, 1.5, 0)); -- Adjust to position the name above the head
        esp.name.Visible = visible;

        if visible then
            local x, y = position.X, position.Y;
            esp.name.Position = newVector2(x, y);
            esp.name.Text = player.Name;
            esp.name.Color = settings.teamcolor and player.TeamColor.Color or settings.defaultcolor;
        end
    else
        esp.name.Visible = false;
    end
end

local function toggleESP(enabled)
    espEnabled = enabled
    if not espEnabled then
        for _, drawings in pairs(espCache) do
            drawings.name.Visible = false
        end
    end
end

-- main
for _, player in next, players:GetPlayers() do
    if player ~= localPlayer then
        createEsp(player);
    end
end

players.PlayerAdded:Connect(function(player)
    createEsp(player);
end);

players.PlayerRemoving:Connect(function(player)
    removeEsp(player);
end)

runService:BindToRenderStep("esp", Enum.RenderPriority.Camera.Value, function()
    if espEnabled then
        for player, drawings in next, espCache do
            if settings.teamcheck and player.Team == localPlayer.Team then
                continue;
            end

            if drawings and player ~= localPlayer then
                updateEsp(player, drawings);
            end
        end
    end
end)

-- Rayfield UI Setup
local Window = Rayfield:CreateWindow({
    Name = "Tubiu",
    LoadingTitle = "I love you.",
    LoadingSubtitle = "Tubis!!",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "ESP_Toggle"
    },
    Discord = {
        Enabled = false,
        Invite = "",
        RememberJoins = true
    },
    KeySystem = false
})

local Tab = Window:CreateTab("Criminality stuff.")

local Toggle = Tab:CreateToggle({
    Name = "Enable ESP",
    CurrentValue = espEnabled,
    Callback = function(value)
        toggleESP(value)
    end
})

local Button = Tab:CreateButton({
   Name = "Auto lockpick",
   Callback = function()
   loadstring(game:HttpGet(('https://raw.githubusercontent.com/Iceyze/crim-autolockpick/main/main.lua')))()
   end,
})

local Button = Tab:CreateButton({
   Name = "Safe esp",
   Callback = function()
   loadstring(game:HttpGet(('https://raw.githubusercontent.com/efk0666/safesp/main/saferegister')))()
   end,
})

local Button = Tab:CreateButton({
   Name = "Torso Aimbot",
   Callback = function()
  loadstring(game:HttpGet(('https://raw.githubusercontent.com/efk0666/Tubi/main/aimbot')))()
   end,
})

local Button = Tab:CreateButton({
   Name = "Head Aimbot",
   Callback = function()
   loadstring(game:HttpGet(('https://raw.githubusercontent.com/efk0666/Tubiuhub/main/headaimbot')))()
   end,
})

local Tab = Window:CreateTab("Combat warriors")

local Button = Tab:CreateButton({
   Name = "Hitbox Expender Press T",
   Callback = function()
   loadstring(game:HttpGet(('https://raw.githubusercontent.com/efk0666/hitboxexpender/main/hitbox')))()
   end,
})

local Tab = Window:CreateTab("Random")

local Slider = Tab:CreateSlider({
   Name = "Fov",
   Range = {0, 120},
   Increment = 5,
   Suffix = "Fov",
   CurrentValue = 10,
   Flag = "Slider1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
   Callback = function(Value)
workspace.CurrentCamera.FieldOfView = Value
   end,
})

local Button = Tab:CreateButton({
   Name = "FullBright",
   Callback = function()
